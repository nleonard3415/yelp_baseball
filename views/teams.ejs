<%- include("partials/header") %>
		
	<div class="container">
		<div class="row mt-2">
			<% teams.forEach((team) =>{ %>
			<div class="card m-3">
				<a href="/teams/<%= team._id %>">
				<img class="card-img card-img-top" src="<%= team.image_link %>" alt="Picture of the team">
					</a>
				<h3 class="card-title mt-3"><%= team.title %></h3>
				<p class="card-text mb-3 mx-3 "><%= team.description %></p>
			</div>
			<%}) %>
		</div>
	</div>
	<%- include("partials/footer") %>